{
  "name": "hashflags",
  "version": "0.0.1",
  "description": "An unofficial library for Twitter hashflags",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/JamieMagee/hashflags-node.git"
  },
  "author": "Jamie Magee",
  "keywords": [
    "hashflag",
    "twitter",
    "hashtag"
  ],
  "files": [
    "lib"
  ],
  "main": "lib/index.js",
  "typings": "lib/index.d.ts",
  "scripts": {
    "clean": "rimraf lib && rimraf coverage",
    "format": "prettier --write \"{src,__tests__}/**/*.ts\" --single-quote",
    "lint": "tslint --fix --project . --force --format verbose \"src/**/*.ts\"",
    "prepare": "npm run build",
    "prebuild": "npm run clean && npm run format && npm run lint && echo Using TypeScript && tsc --version",
    "build": "tsc --pretty",
    "test": "jest",
    "coverage": "jest --coverage",
    "watch": "npm run build -- --watch",
    "watch:test": "jest --watch"
  },
  "dependencies": {
    "axios": "^0.17.1",
    "twitter-text": "^2.0.3"
  },
  "devDependencies": {
    "@types/jest": "^22.1.1",
    "@types/node": "^9.4.0",
    "@types/twitter-text": "^2.0.0",
    "axios-mock-adapter": "^1.12.0",
    "coveralls": "^3.0.0",
    "install": "^0.10.4",
    "jest": "^22.1.4",
    "jest-environment-node-debug": "^2.0.0",
    "npm": "^5.6.0",
    "prettier": "^1.5.2",
    "rimraf": "^2.0.0",
    "ts-jest": "^22.0.1",
    "ts-node": "^4.1.0",
    "tslint": "^5.0.0",
    "tslint-config-prettier": "^1.1.0",
    "tslint-microsoft-contrib": "^5.0.2",
    "typescript": "^2.3.0"
  },
  "engines": {
    "node": ">=6.0.0"
  },
  "jest": {
    "transform": {
      ".(ts)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|js)$",
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "testEnvironment": "node",
    "mapCoverage": true
  }
}
