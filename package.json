{
  "name": "hashflags",
  "version": "1.1.0",
  "description": "An unofficial library for Twitter hashflags",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/JamieMagee/hashflags-node.git"
  },
  "author": "Jamie Magee",
  "keywords": [
    "hashflag",
    "twitter",
    "hashtag"
  ],
  "files": [
    "lib"
  ],
  "main": "lib/index.js",
  "typings": "lib/index.d.ts",
  "scripts": {
    "clean": "rimraf lib && rimraf coverage",
    "cz": "git-cz",
    "commitmsg": "commitlint -e",
    "format": "prettier --write \"{src,__tests__}/**/*.ts\" --single-quote",
    "lint": "tslint --fix --project . --force --format verbose \"src/**/*.ts\"",
    "prepare": "npm run build",
    "prebuild": "npm run clean && npm run format && npm run lint && echo Using TypeScript && tsc --version",
    "build": "tsc --pretty",
    "test": "jest",
    "coverage": "jest --coverage",
    "semantic-release": "semantic-release",
    "watch": "npm run build -- --watch",
    "watch:test": "jest --watch",
    "travis-deploy-once": "travis-deploy-once"
  },
  "dependencies": {
    "axios": "^0.18.0",
    "twitter-text": "^2.0.4"
  },
  "devDependencies": {
    "@commitlint/cli": "^6.1.0",
    "@commitlint/config-conventional": "^6.1.0",
    "@commitlint/prompt": "^6.1.0",
    "@commitlint/travis-cli": "^6.1.0",
    "@semantic-release/git": "^4.0.1",
    "@types/jest": "^22.1.3",
    "@types/node": "^9.4.6",
    "@types/twitter-text": "^2.0.0",
    "axios-mock-adapter": "^1.14.0",
    "commitizen": "^2.9.6",
    "coveralls": "^3.0.0",
    "cz-conventional-changelog": "^2.1.0",
    "ghooks": "^2.0.2",
    "install": "^0.11.0",
    "jest": "^22.4.0",
    "jest-environment-node-debug": "^2.0.0",
    "npm": "^5.6.0",
    "prettier": "^1.10.2",
    "rimraf": "^2.6.2",
    "semantic-release": "^15.0.1",
    "semantic-release-cli": "^3.6.3",
    "travis-deploy-once": "^4.3.4",
    "ts-jest": "^22.0.4",
    "ts-node": "^6.0.0",
    "tslint": "^5.9.1",
    "tslint-config-prettier": "^1.8.0",
    "tslint-microsoft-contrib": "^5.0.3",
    "typescript": "^2.7.2"
  },
  "engines": {
    "node": ">=6.0.0"
  },
  "jest": {
    "transform": {
      ".(ts)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|js)$",
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "testEnvironment": "node",
    "mapCoverage": true
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    },
    "ghooks": {
      "pre-commit": "npm run lint",
      "commit-msg": "npm run commitmsg",
      "pre-push": "npm test",
      "post-merge": "npm update",
      "post-rewrite": "npm update"
    }
  },
  "release": {
    "verifyConditions": [
      "@semantic-release/npm",
      "@semantic-release/git",
      "@semantic-release/github"
    ],
    "publish": [
      "@semantic-release/npm",
      "@semantic-release/git",
      "@semantic-release/github"
    ]
  }
}
