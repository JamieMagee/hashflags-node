{
  "name": "hashflags",
  "version": "1.1.0",
  "description": "An unofficial library for Twitter hashflags",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/JamieMagee/hashflags-node.git"
  },
  "author": "Jamie Magee",
  "keywords": [
    "hashflag",
    "twitter",
    "hashtag"
  ],
  "files": [
    "lib"
  ],
  "main": "lib/index.js",
  "typings": "lib/index.d.ts",
  "scripts": {
    "clean": "rimraf lib && rimraf coverage",
    "cz": "git-cz",
    "commitmsg": "commitlint -e",
    "format": "prettier --write \"{src,__tests__}/**/*.ts\" --single-quote",
    "lint": "tslint --fix --project . --force --format verbose \"src/**/*.ts\"",
    "prepare": "yarn run build",
    "prebuild": "yarn run clean && yarn run format && yarn run lint && echo Using TypeScript && tsc --version",
    "build": "tsc --pretty",
    "test": "jest",
    "coverage": "jest --coverage",
    "semantic-release": "semantic-release",
    "watch": "yarn run build -- --watch",
    "watch:test": "jest --watch",
    "travis-deploy-once": "travis-deploy-once"
  },
  "dependencies": {
    "axios": "^0.18.0",
    "twitter-text": "^3.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.0.0",
    "@commitlint/config-conventional": "^7.1.2",
    "@commitlint/prompt": "^8.0.0",
    "@commitlint/travis-cli": "^7.0.0",
    "@semantic-release/git": "^7.0.1",
    "@types/jest": "^24.0.9",
    "@types/node": "^12.0.4",
    "@types/twitter-text": "^2.0.0",
    "axios-mock-adapter": "^1.14.0",
    "commitizen": "^3.0.4",
    "coveralls": "^3.0.0",
    "cz-conventional-changelog": "^2.1.0",
    "ghooks": "^2.0.2",
    "install": "^0.13.0",
    "jest": "^24.1.0",
    "jest-environment-node-debug": "^2.0.0",
    "npm": "^6.0.0",
    "prettier": "^1.10.2",
    "rimraf": "^2.6.2",
    "semantic-release": "^15.0.1",
    "semantic-release-cli": "^5.1.1",
    "travis-deploy-once": "^5.0.0",
    "ts-jest": "^23.0.1",
    "ts-node": "^8.0.2",
    "tslint": "^5.9.1",
    "tslint-config-prettier": "^1.8.0",
    "tslint-microsoft-contrib": "^6.0.0",
    "typescript": "^3.0.3"
  },
  "engines": {
    "node": ">=6.0.0"
  },
  "jest": {
    "transform": {
      ".(ts)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|js)$",
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "testEnvironment": "node"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    },
    "ghooks": {
      "pre-commit": "yarn run lint",
      "commit-msg": "yarn run commitmsg",
      "pre-push": "yarn test",
      "post-merge": "yarn update",
      "post-rewrite": "yarn update"
    }
  },
  "release": {
    "verifyConditions": [
      "@semantic-release/npm",
      "@semantic-release/git",
      "@semantic-release/github"
    ],
    "publish": [
      "@semantic-release/npm",
      "@semantic-release/github"
    ]
  }
}
